<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cai_dat.Cai_dat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_close_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/b"
            android:gravity="center"
            android:text="Cài đặt"
            android:textColor="#404040"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_hoantat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/b"
            android:gravity="center"
            android:text="Hoàn tất"
            android:textColor="#0088FF"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#C8C8C8" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/b"
                android:text="Hồ sơ của bạn"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/anh"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/female" />

            <TextView
                android:id="@+id/txt_anh_dai_dien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/b"
                android:gravity="center"
                android:text="THAY ẢNH ĐẠI DIỆN"
                android:textColor="#65C500"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/b"
                android:text="Tên"
                android:textColor="#6E6E6E"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/khung1"
                android:fontFamily="@font/d"
                android:paddingStart="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/b"
                android:text="Email"
                android:textColor="#6E6E6E"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/khung1"
                android:enabled="false"
                android:fontFamily="@font/d"
                android:paddingStart="20dp"
                android:text="đá"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <android.widget.Button
                android:id="@+id/btn_dang_xuat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/vien_vang"
                android:fontFamily="@font/b"
                android:text="Đăng xuất"
                android:textColor="#490FBF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/b"
                android:text="Tổng quan"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/khung"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/d"
                        android:text="Hiệu ứng âm thanh"
                        android:textColor="#505050"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="20dp"
                        android:thumb="@drawable/thumb"
                        app:track="@drawable/track" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#A3A3A3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/d"
                        android:text="Thông báo kích lệ"
                        android:textColor="#505050"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="20dp"
                        android:thumb="@drawable/thumb"
                        app:track="@drawable/track" />
                </LinearLayout>
            </LinearLayout>

            <android.widget.Button
                android:id="@+id/btn_muc_thn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/vien_vang"
                android:fontFamily="@font/b"
                android:text="Mục tiêu hàng ngày"
                android:textColor="#490FBF"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_chung_tamhotro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/vien_vang"
                android:fontFamily="@font/b"
                android:text="Chung tâm hỗ trợ"
                android:textColor="#490FBF"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_phan_hoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/vien_vang"
                android:fontFamily="@font/b"
                android:text="Phản hồi"
                android:textColor="#490FBF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/b"
                android:text="Quyền riêng tư"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />


            <android.widget.Button
                android:id="@+id/btn_dieukhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/vien_vang"
                android:fontFamily="@font/b"
                android:text="Điều khoản"
                android:textColor="#490FBF"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/btn_loi_cam_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/vien_vang"
                android:fontFamily="@font/b"
                android:text="Lời cảm ơn"
                android:layout_marginBottom="40dp"
                android:textColor="#490FBF"
                android:textStyle="bold" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>