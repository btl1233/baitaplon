<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardBackgroundColor="@color/teal_200"
        app:cardCornerRadius="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/vong2"
                    android:padding="4dp"
                    android:id="@+id/layout_nam"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="150dp"
                        android:id="@+id/img_name"
                        android:layout_height="150dp"
                        android:src="@drawable/male"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/vong1"
                    android:padding="4dp"
                    android:id="@+id/layout_nu"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="150dp"
                        android:id="@+id/img_nu"
                        android:layout_height="150dp"
                        android:src="@drawable/female"/>
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/mau_xanh"
                android:textColor="#5A5A5A"
                android:gravity="center"
                android:hint="Name"
                android:textSize="30dp"
                android:textStyle="bold"
                android:fontFamily="@font/c"
                />
            <android.widget.Button
                android:id="@+id/btn_xac_nhan"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Xác nhận"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/mau_tim"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/c"
                android:alpha="0.5"
                android:enabled="false"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>